<Window x:Class="Ixian_DLT_GUI.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ixian_DLT_GUI"
        mc:Ignorable="d"
              Title="Confirm" Height="120" Width="240" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="ResponseTextBox" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="" FontSize="13" Foreground="Black" Background="Red" />
        <Button Grid.Column="0" Grid.Row="1" Height="20" Width="46" Content="Clean It!" Click="OKButton_Click"  Grid.RowSpan="2" />
        <Button Grid.Column="1" Grid.Row="1" Height="20" Width="80" Content="Ooops!" Click="NOButton_Click" Grid.RowSpan="2" />
    </Grid>
</Window>
